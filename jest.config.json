{
  "preset": "ts-jest/presets/default-esm",
  "testEnvironment": "jsdom",
  "modulePathIgnorePatterns": ["dist"],
  "moduleNameMapper": {
    "^(\\.{1,2}/.*)\\.js$": "$1"
  },
  "transform": {
    "\\.[jt]sx?$": [
      "ts-jest",
      {
        "tsconfig": {
          "sourceMap": true
        }
      }
    ]
  }
}
